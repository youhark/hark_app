<div class="stripe playlist">
  <!-- this will repete -->
  <div class="playlist-info">
    
    <div class="owner-info">
      <img src="/images/face.jpg" alt="hello">
      <div class="owner-detail">
        <h2 class="feature_label">Featured Playlist</h2>
        <%= link_to("Made by #{playlist.user.email}", "#" , {class: "made_by"}) %>
      </div>
        <div class="playlist_details">
        <h1><%= playlist.title %></h1>
        <p><%= playlist.description %></p>
      </div>
    </div>
    <!-- this will repeat -->
    <ul class="article-mini">
        <% playlist.articles.each do |article| %>
          <li>
            <div class="article-details">
              <div class="img-div" data-image="<%= article.image_url %>">
              </div>
              <div class="overlay">
                <a href="#" class="expand">+</a>
                <a class="close-overlay hidden">x</a>
              </div>
              <div class="article-info">
                <h3><%= article.author %></h3>
                <h2><%= article.title %></h2>
              </div>
              <div class="article-footer">
                <div class="time"><%= article.length_in_seconds %></div>
                <div class="category">
                  <% article.categories.each do |category| %>
                    <%= category.name  %>
                  <% end %> 
                </div>
              </div>
            </div>
        	</li>
        <% end %>
    </ul>
  </div>
</div>


<div id="effect-6" class="effects clearfix">
  <div class="img">
      <img src="img/jpg/1.jpg" alt="">
      <div class="overlay">
          <a href="#" class="expand">+</a>
          <a class="close-overlay hidden">x</a>
      </div>
  </div>
</div>